{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Action",
  "properties": {
    "payload": {
      "type": "object",
      "oneOf": [
        {
          "title": "NoOpAction",
          "description": "Do nothing.",
          "properties": {
            "type": {
              "type": "string",
              "const": "no-op"
            }
          },
          "required": ["type"],
          "additionalProperties": false
        },
        {
          "title": "SendMessageAction",
          "description": "Send a message to another agent.",
          "properties": {
            "type": {
              "type": "string",
              "const": "send-message"
            },
            "targetAgentId": {
              "type": "string",
              "description": "The target agent's ID."
            },
            "message": {
              "type": "string",
              "description": "The content of the message."
            }
          },
          "required": ["type"],
          "additionalProperties": false
        }
      ],
      "description": "The payload that's specific to a particular action."
    },
    "comment": {
      "type": "string",
      "description": "Use this field to articulate your thought process in choosing this action."
    }
  },
  "additionalProperties": false,
  "required": ["payload", "comment"]
}
