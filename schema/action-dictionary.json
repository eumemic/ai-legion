{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Action",
  "oneOf": [
    {
      "title": "NoOpAction",
      "description": "Do nothing.",
      "properties": {
        "type": {
          "type": "string",
          "const": "no-op"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    {
      "title": "ViewActionDictionaryAction",
      "description": "View the Action Dictionary which describes how to validly format your responses in JSON.",
      "properties": {
        "type": {
          "type": "string",
          "const": "view-action-dictionary"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    {
      "title": "QueryAgentRegistryAction",
      "description": "Ask who the other agents are that I can talk to.",
      "properties": {
        "type": {
          "type": "string",
          "const": "query-agent-registry"
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    {
      "title": "SendMessageAction",
      "description": "Send a message to another agent.",
      "properties": {
        "type": {
          "type": "string",
          "const": "send-message"
        },
        "targetAgentId": {
          "type": "string",
          "description": "The target agent's ID."
        },
        "message": {
          "type": "string",
          "description": "The content of the message."
        }
      },
      "required": ["type", "targetAgentId", "message"],
      "additionalProperties": false
    },
    {
      "title": "ListDirectory",
      "description": "Inspect the contents of a particular directory.",
      "properties": {
        "type": {
          "type": "string",
          "const": "list-directory"
        },
        "path": {
          "type": "string",
          "description": "The path of the directory you want to inspect."
        }
      },
      "required": ["type", "path"],
      "additionalProperties": false
    },
    {
      "title": "ReadFile",
      "description": "Read the contents of a particular file.",
      "properties": {
        "type": {
          "type": "string",
          "const": "read-file"
        },
        "path": {
          "type": "string",
          "description": "The path of the file you want to inspect."
        }
      },
      "required": ["type", "path"],
      "additionalProperties": false
    },
    {
      "title": "WriteFile",
      "description": "Write the contents of a particular file.",
      "properties": {
        "type": {
          "type": "string",
          "const": "write-file"
        },
        "path": {
          "type": "string",
          "description": "The path of the file you want to write to."
        },
        "newContent": {
          "type": "string",
          "description": "The new content of the file."
        }
      },
      "required": ["type", "path", "newContent"],
      "additionalProperties": false
    }
  ]
}
