{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Event",
  "properties": {
    "targetAgentIds": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "The ID of the agent for whom this event is intended. If empty, no agents will receive it. If null, all agents will receive it."
    },
    "payload": {
      "type": "object",
      "oneOf": [
        {
          "title": "HeartbeatEvent",
          "description": "A heartbeat event that occurs periodically.",
          "properties": {
            "type": {
              "type": "string",
              "const": "heartbeat"
            }
          },
          "required": ["type"],
          "additionalProperties": false
        },
        {
          "title": "MessageEvent",
          "type": "object",
          "description": "A message event that is sent between agents.",
          "properties": {
            "type": {
              "type": "string",
              "const": "message"
            },
            "sourceAgentId": {
              "type": "string",
              "description": "The sending agent's ID."
            },
            "message": {
              "type": "string",
              "description": "The content of the message."
            }
          },
          "required": ["type", "fromId", "toId", "message"],
          "additionalProperties": false
        },
        {
          "title": "ErrorEvent",
          "type": "object",
          "description": "An indication that something went wrong.",
          "properties": {
            "type": {
              "type": "string",
              "const": "error"
            },
            "message": {
              "type": "string",
              "description": "Information about the error."
            }
          },
          "required": ["type", "message"],
          "additionalProperties": false
        }
      ]
    }
  },
  "additionalProperties": false,
  "required": ["payload", "comment"]
}
